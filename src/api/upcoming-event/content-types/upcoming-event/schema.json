{
  "kind": "collectionType",
  "collectionName": "upcoming_events",
  "info": {
    "singularName": "upcoming-event",
    "pluralName": "upcoming-events",
    "displayName": "Upcoming Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "button_text": {
      "type": "string",
      "required": true,
      "default": "Register"
    },
    "link": {
      "type": "string",
      "required": true
    },
    "is_external_link": {
      "type": "boolean",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 1
    },
    "event_date": {
      "type": "text",
      "required": true
    }
  }
}
